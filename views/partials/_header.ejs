<header>
  <nav class="navbar navbar-expand-md navbar-dark bg-dark">
    <a class="navbar-brand" href="/urls">TinyApp</a>
    <button
      class="navbar-toggler"
      type="button"
      data-toggle="collapse"
      data-target="#navbarNavAltMarkup"
      aria-controls="navbarNavAltMarkup"
      aria-expanded="false"
      aria-label="Toggle navigation"
    >
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav">
        <a class="nav-item nav-link" href="/urls">My URLs</a>
        <a class="nav-item nav-link" href="/urls/new">Create New URL</a>
      </div>
      <div class="navbar-nav ml-auto my-auto">
        <% if (!user) {%>
        <button type="submit" class="btn btn-outline-secondary mx-2">
          <a href="/register" class="nav-item nav-link">Register</a>
        </button>
        <button type="submit" class="btn btn-success mx-2">
          <a href="/login" class="nav-item nav-link">Login</a>
        </button>
        <% } else { %>
        <div class="navbar-text mx-auto my-auto">
          User signed in: <%= user.email %>
        </div>
        <form action="/logout" method="post">
          <button type="submit" class="btn btn-outline-success mx-2">
            Logout
          </button>
        </form>
        <% } %>
      </div>
    </div>
  </nav>
</header>
